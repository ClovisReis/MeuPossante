<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lucas.com.meupossante.Principal"
    tools:showIn="@layout/app_bar_principal">


    <TextView
        android:id="@+id/veiculo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"/>

    <ImageButton
        android:id="@+id/quilometragem"
        android:layout_marginTop="10sp"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:src="@drawable/ic_quilometragembutton"
        android:layout_below="@+id/veiculo1"
        android:onClick="Principais"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quilometragem"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_below="@+id/quilometragem"/>

    <ImageButton
        android:id="@+id/manut"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/veiculo1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_manutencaobutton"
        android:onClick="Principais"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manutenção"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:layout_below="@+id/manut"/>

    <ImageButton
        android:id="@+id/altregistro"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/veiculo1"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_alterar_registrobutton"
        android:onClick="Principais"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar Registro"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_below="@+id/altregistro"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>