<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="90sp"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lucas.com.meupossante.Quilometragem"
    tools:showIn="@layout/app_bar_quilometragem">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:id="@+id/veiculo1"/>

    <ImageView
        android:id="@+id/quilometragem"
        android:layout_width="90dp"
        android:layout_height="78dp"
        android:layout_below="@+id/veiculo1"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_quilometragem" />

    <TextView
        android:id="@+id/txtquilometragem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veiculo1"
        android:layout_alignRight="@+id/quilometragem"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="28dp"
        android:text="Quilometragem"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/legendaquilometragem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtquilometragem"
        android:layout_marginTop="40dp"
        android:textSize="16dp"
        android:text="A sua quilometragem atual Ã©:" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textColor="@color/colortext"
        android:background="@color/textosimples"
        android:layout_centerHorizontal="true"
        android:id="@+id/texto"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/legendaquilometragem"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners"
        android:text="Salvar"
        android:id="@+id/salvarQuilometragem"
        android:onClick="salvarQuilometragemClick"
        android:textColor="@color/colortext"
        />
</RelativeLayout>

</ScrollView>