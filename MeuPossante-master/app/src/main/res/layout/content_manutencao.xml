<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="90dp"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="lucas.com.meupossante.Manutencao"
        tools:showIn="@layout/app_bar_manutencao">

        <TextView
            android:id="@+id/apelidoprincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageAgua"
            android:src="@drawable/ic_agua"
            android:contentDescription="@string/agua"
            android:layout_below="@+id/Divisor"
            android:onClick="onClick"
            android:layout_alignTop="@+id/imageAlinhamento"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageAlinhamento"
            android:src="@drawable/ic_alinhamento"
            android:layout_marginTop="41dp"
            android:contentDescription="@string/alinhamento"
            android:onClick="onClick"
            android:layout_below="@+id/Divisor"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="41dp"
            android:id="@+id/imageArrefecimento"
            android:src="@drawable/ic_arrefecimento"
            android:contentDescription="@string/arrefecimento"
            android:onClick="onClick"
            android:layout_below="@+id/Divisor"
            android:layout_above="@+id/textViewAlinhamento"
            android:layout_alignRight="@+id/textViewManutencao"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agua"
            android:id="@+id/textViewAgua"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/imageAgua"
            android:layout_alignRight="@+id/imageAgua"
            android:layout_alignEnd="@+id/imageAgua"
            android:layout_alignBottom="@+id/textViewAlinhamento"
            android:layout_alignLeft="@+id/imageAgua"
            android:layout_alignStart="@+id/imageAgua"
            android:gravity="center"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/arrefecimento"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textViewArrefecimento"
            android:gravity="center"
            android:layout_alignTop="@+id/textViewAlinhamento"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/imageArrefecimento"
            android:layout_alignStart="@+id/imageArrefecimento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/alinhamento"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textViewAlinhamento"
            android:gravity="center"
            android:layout_below="@+id/imageAlinhamento"
            android:layout_alignLeft="@+id/imageAlinhamento"
            android:layout_alignStart="@+id/imageAlinhamento" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/imageManutencao"
            android:src="@drawable/ic_manutencao"
            android:contentDescription="@string/manutencao"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/manutencao"
            android:id="@+id/textViewManutencao"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp"
            android:textStyle="normal"
            android:layout_alignRight="@+id/imageCambagem"
            android:layout_alignEnd="@+id/imageCambagem"
            android:layout_alignTop="@+id/imageManutencao"
            android:layout_toRightOf="@+id/imageManutencao"
            android:layout_toEndOf="@+id/imageManutencao"
            android:layout_alignBottom="@+id/imageManutencao" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageRevisao"
            android:src="@drawable/ic_revisao"
            android:onClick="onClick"
            android:layout_below="@+id/imageManutencao"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="41dp"
             />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewManutencao"
            android:layout_alignRight="@+id/imageRevisao"
            android:layout_alignParentRight="true"

            android:layout_alignBottom="@+id/imageRevisao"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageRevisao"
            android:layout_toEndOf="@+id/imageRevisao"

            android:layout_marginTop="47dp"

            android:layout_marginLeft="14dp"
            android:text="OBS: Preencha o campo de Revisão Geral e todos os itens serão preenchidos automaticamente com a mesma quilometragem. Caso as peças tenham sido trocadas em diferentes momentos, indique a quilometragem da troca de cada item individualmente abaixo."
            android:textSize="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/revisao"
            android:id="@+id/textView12"
            android:layout_marginLeft="28dp"
            android:textSize="12dp"
            android:layout_below="@+id/imageRevisao"
            android:textColor="@color/colorPrimary" />

        <View
            android:id="@+id/Divisor"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:layout_below="@+id/textView12" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageBalanceamento"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_balanceamento"
            android:layout_below="@+id/textViewAgua"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageBateria"
            android:src="@drawable/ic_bateria"
            android:layout_alignTop="@+id/imageBalanceamento"
            android:layout_centerHorizontal="true"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageCambagem"
            android:layout_alignTop="@+id/imageBateria"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_cambagem"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/balanceamento"
            android:id="@+id/textView2"
            android:textSize="12dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignRight="@+id/imageBalanceamento"
            android:layout_alignEnd="@+id/imageBalanceamento"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bateria"
            android:id="@+id/textView3"
            android:layout_below="@+id/imageBateria"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cambagem"
            android:textSize="12dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/imageCambagem"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageCorreia"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_correia"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageEmbreagem"
            android:layout_alignTop="@+id/imageCorreia"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_embreagem"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageFiltroDeAr"
            android:layout_alignTop="@+id/imageEmbreagem"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_filtro_de_ar"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/correia"
            android:id="@+id/textView5"
            android:layout_below="@+id/imageCorreia"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_alignRight="@+id/imageCorreia"
            android:layout_alignEnd="@+id/imageCorreia"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/embreagem"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/filtro_de_ar"
            android:id="@+id/textView7"
            android:textSize="12dp"
            android:layout_alignTop="@+id/textView6"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageFiltroDeCombustivel"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_filtro_de_combustivel"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageFreios"
            android:layout_alignTop="@+id/imageFiltroDeCombustivel"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_freios"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageOleo"
            android:layout_alignTop="@+id/imageFreios"
            android:layout_alignRight="@+id/imageFiltroDeAr"
            android:layout_alignEnd="@+id/imageFiltroDeAr"
            android:src="@drawable/ic_oleo"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/filtro_de_combustivel"
            android:id="@+id/textView8"
            android:layout_below="@+id/imageFiltroDeCombustivel"
            android:layout_alignLeft="@+id/imageFiltroDeCombustivel"
            android:layout_alignStart="@+id/imageFiltroDeCombustivel"
            android:gravity="center"
            android:textSize="12dp"
            android:layout_alignRight="@+id/imageFiltroDeCombustivel"
            android:layout_alignEnd="@+id/imageFiltroDeCombustivel"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/freios"
            android:textSize="12dp"
            android:id="@+id/textView9"
            android:layout_below="@+id/imageFreios"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/oleo"
            android:textSize="12dp"
            android:id="@+id/textView10"
            android:layout_below="@+id/imageOleo"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imagePneus"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_pneus"
            android:onClick="onClick" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageRodizioDePneus"
            android:layout_alignLeft="@+id/imageFreios"
            android:layout_alignStart="@+id/imageFreios"
            android:layout_above="@+id/textView13"
            android:src="@drawable/ic_rodizio"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/pneus"
            android:textSize="12dp"
            android:id="@+id/textView11"
            android:layout_below="@+id/imagePneus"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imagePneus"
            android:layout_alignEnd="@+id/imagePneus"
            android:gravity="center"
            android:textColor="@color/colorPrimary" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/rodizio_de_pneus"
            android:id="@+id/textView13"
            android:layout_alignTop="@+id/textView11"
            android:layout_alignLeft="@+id/imageRodizioDePneus"
            android:layout_alignStart="@+id/imageRodizioDePneus"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView14"
            android:textSize="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/balao_compra_aplicativo"
            android:layout_below="@+id/textView13"
            android:layout_centerInParent="true"
            android:background="#FFFFFF"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
</ScrollView>
